<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_large</item>
        <item name="android:textColor">@color/colorVariant</item>
    </style>

    <style name="SubTitleAppearance">
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ButtonAppearance">
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/inter_regular_400</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonEzSchedule" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_btn_ezschedule</item>
        <item name="android:elevation">@dimen/spacing_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ButtonEzScheduleCancel" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/bg_btn_ezschedule_red</item>
        <item name="android:elevation">@dimen/spacing_large</item>
        <item name="android:color">@color/black</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/size_none</item>
    </style>

    <style name="InputLayoutAppearance" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxCornerRadiusBottomEnd">@dimen/corners_tiny</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corners_tiny</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corners_tiny</item>
        <item name="boxCornerRadiusTopStart">@dimen/corners_tiny</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

    <style name="InputAppearance">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_small</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/inter_regular_400</item>
    </style>

    <style name="ImageButtonEzSchedule" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@drawable/bg_btn_ezschedule</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
        <item name="android:elevation">@dimen/spacing_large</item>
    </style>

    <style name="FloatingActionButtonEzSchedule" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:background">@drawable/bg_floating_button</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="IconOnlyButtonEzSchedule" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/spacing_largeX</item>
        <item name="android:paddingRight">@dimen/spacing_largeX</item>
        <item name="cornerRadius">@dimen/corners_tiny</item>
        <item name="iconPadding">0dp</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>