<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/settings_bs_tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Adicionar SalÃ£o"
        android:textAlignment="center"
        android:textSize="@dimen/size_standard"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/settings_bs_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_search_view"
        android:hint="Nome"
        android:inputType="textWebEditText"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_bs_tv_title" />


    <EditText
        android:id="@+id/settings_bs_et_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_search_view"
        android:hint="Valor"
        android:inputType="numberDecimal"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_bs_et_name" />


    <TextView
        android:id="@+id/settings_bs_tv_saloon_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="Bloco"
        android:textAlignment="center"
        android:textSize="@dimen/size_standard"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/settings_bs_et_saloon_number"
        app:layout_constraintEnd_toStartOf="@id/settings_bs_et_saloon_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_bs_et_price" />


    <EditText
        android:id="@+id/settings_bs_et_saloon_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_search_view"
        android:hint="Numero/Letra"
        android:inputType="textWebEditText"
        android:padding="16dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/settings_bs_tv_saloon_number"
        app:layout_constraintTop_toBottomOf="@id/settings_bs_et_price" />

    <Button
        android:id="@+id/settings_bs_btn"
        style="@style/ButtonEzSchedule"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/spacing_largeX"
        android:layout_marginBottom="@dimen/spacing_standard"
        android:padding="0dp"
        android:text="Salvar"
        android:textAppearance="@style/ButtonAppearance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_bs_et_saloon_number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintWidth_percent="0.38" />

</androidx.constraintlayout.widget.ConstraintLayout>