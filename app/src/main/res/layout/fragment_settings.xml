<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHome"
        android:textSize="@dimen/size_largeXX"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O que deseja ajustar?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="160dp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btn_my_person"
        style="@style/ButtonEzSchedule"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="@dimen/spacing_large"
        android:text="@string/frag_settings_btn_profile"
        android:textAppearance="@style/ButtonAppearance"
        app:layout_constraintTop_toBottomOf="@id/tvHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_my_condo"
        android:layout_marginTop="102dp"
        app:layout_constraintWidth_percent="0.37"/>

    <Button
        android:id="@+id/btn_my_condo"
        style="@style/ButtonEzSchedule"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="@string/frag_settings_btn_condo"
        android:layout_marginEnd="@dimen/spacing_large"
        android:textAppearance="@style/ButtonAppearance"
        android:layout_marginTop="88dp"
        app:layout_constraintStart_toEndOf="@id/btn_my_person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.37"
        app:layout_constraintLeft_toRightOf="@id/btn_my_person"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_my_person"/>

</androidx.constraintlayout.widget.ConstraintLayout>