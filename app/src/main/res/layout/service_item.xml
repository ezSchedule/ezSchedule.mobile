<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="32dp"
    android:background="@drawable/item_rounded">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_service_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_service_item"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/item_image_rounded"
            android:src="@drawable/image_item_services" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_service_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:text="@string/tv_services_item_title_service"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/card_service_item"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/tv_services_item_name"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/card_service_item"
        app:layout_constraintTop_toBottomOf="@id/tv_service_item" />

</androidx.constraintlayout.widget.ConstraintLayout>