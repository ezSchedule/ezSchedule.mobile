<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/frag_settings_iv_icon_condominium"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@drawable/badge_user"
            android:src="@drawable/ic_building"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_first"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_extremeXXX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_iv_icon_condominium" />

        <TextView
            android:id="@+id/frag_settings_tv_label_residents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_text_residents"
            android:textColor="@color/colorVariant"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_first" />

        <EditText
            android:id="@+id/frag_settings_et_value_residents"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@null"
            android:gravity="center|end"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/frag_settings_md_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_settings_tv_label_residents"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_first"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="314" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_second"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_residents" />

        <TextView
            android:id="@+id/frag_settings_tv_label_apartments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_text_apartments"
            android:textColor="@color/colorVariant"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_second" />

        <EditText
            android:id="@+id/frag_settings_et_value_apartments"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@null"
            android:gravity="center|end"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/frag_settings_md_third"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_settings_tv_label_apartments"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_second"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="27" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_third"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_apartments" />

        <TextView
            android:id="@+id/frag_settings_tv_label_salons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_text_salons"
            android:textColor="@color/colorVariant"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_third" />

        <EditText
            android:id="@+id/frag_settings_et_value_salons"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@null"
            android:gravity="center|end"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/frag_settings_md_fourth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_settings_tv_label_salons"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_third"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="13" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_fourth"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_salons" />

        <TextView
            android:id="@+id/frag_settings_tv_label_add_salons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_btn_add_salons"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_fourth" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_fifth"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_add_salons" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>