<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/frag_settings_iv_icon_user"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@drawable/badge_user"
            android:src="@drawable/baseline_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/frag_settings_tv_name_user"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center"
            android:lines="2"
            android:textAppearance="@style/TitleAppearance"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_iv_icon_user"
            tools:text="Endryl Fiorotti" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_first"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_extremeXXX"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_iv_icon_user" />

        <TextView
            android:id="@+id/frag_settings_tv_label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_text_name"
            android:textColor="@color/black"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_first" />

        <EditText
            android:id="@+id/frag_settings_et_value_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@null"
            android:gravity="center|end"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/frag_settings_md_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_settings_tv_label_name"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_first"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="Endryl" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_second"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_name" />

        <TextView
            android:id="@+id/frag_settings_tv_label_surname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_text_surname"
            android:textColor="@color/black"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_second" />

        <EditText
            android:id="@+id/frag_settings_et_value_surname"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@null"
            android:gravity="center|end"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/frag_settings_md_third"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_settings_tv_label_surname"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_second"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="Fiorotti" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_third"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_surname" />

        <TextView
            android:id="@+id/frag_settings_tv_label_cpf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_text_document"
            android:textColor="@color/black"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_third" />

        <EditText
            android:id="@+id/frag_settings_et_value_cpf"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@null"
            android:gravity="center|end"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/frag_settings_md_fourth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_settings_tv_label_cpf"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_third"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="000.000.000-00" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_fourth"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_cpf" />

        <TextView
            android:id="@+id/frag_settings_tv_label_apartment_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_text_apartment_number"
            android:textColor="@color/black"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_fourth" />

        <EditText
            android:id="@+id/frag_settings_et_value_apartment_number"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@null"
            android:gravity="center|end"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/frag_settings_md_fifth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_settings_tv_label_apartment_number"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_fourth"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="44" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_fifth"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_apartment_number" />

        <TextView
            android:id="@+id/frag_settings_tv_label_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_text_block"
            android:textColor="@color/black"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_fifth" />

        <EditText
            android:id="@+id/frag_settings_et_value_block"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@null"
            android:gravity="center|end"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/frag_settings_md_sixth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_settings_tv_label_block"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_fifth"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="1A" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_sixth"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_block" />

        <TextView
            android:id="@+id/frag_settings_tv_label_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_text_phone"
            android:textColor="@color/black"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_sixth" />

        <EditText
            android:id="@+id/frag_settings_et_value_phone"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@null"
            android:gravity="center|end"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/frag_settings_md_seventh"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_settings_tv_label_phone"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_sixth"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="(11) 90000-0000" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_seventh"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_phone" />

        <TextView
            android:id="@+id/frag_settings_tv_label_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            android:text="@string/frag_settings_text_email"
            android:textColor="@color/black"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_seventh" />

        <EditText
            android:id="@+id/frag_settings_et_value_email"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@null"
            android:gravity="center|end"
            android:inputType="text"
            android:textColor="@color/gray"
            android:textSize="@dimen/size_small"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/frag_settings_md_eighth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/frag_settings_tv_label_email"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_md_seventh"
            tools:ignore="Autofill,LabelFor,TextFields"
            tools:text="endryl@gmail.com" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/frag_settings_md_eighth"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_small"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/frag_settings_tv_label_email" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>